<%- include('partials/header.ejs') %>

    <div class="container">
      <div class="row justify-content-center my-5">
        <h2 class="text-center"><%= strDrink %></h2>
      </div>
      <div class="row">
        <div class="col-sm-12 col-lg-6 mb-5 d-flex justify-content-center">
          <img class="descr-drink-img" src=" <%=strDrinkThumb %>" alt="<%= strDrink %>">
        </div>
        <div class="col-sm-12 col-lg-6 ">
          <div class="card ingredients-card" >
            <h4 class="card-header">Ingredients</h4>
            <ul class="list-group list-group-flush">
              <%  for(const [key, value] of Object.entries(ingQuantity)) { %>
              <li class="list-group-item"><%=key%>  <%= value %></li>
              <% }%>
            </ul>
          </div>
          <div class="instructions">
            <h4>Method</h4>
          
            <% instructions.forEach(instr => { %>
           <%   if(instr[instr.length-1] === '.'){instr = instr.slice(0, -1)}%>
              <p class="instruction"><%= instr %>.</p>
           <% })%>
         
        </div>
        <div class="glass">
          <h4>Glass</h4>
          <p class="serve">Serve: <%= strGlass %></p>
        </div>
        </div>
      </div>
    </div>
  </body>
</html>


